<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="css/creators.css" />
<link rel="stylesheet" href="css/forms.css" />
<body>
  <%- include('../includes/userNavbar.ejs') %>
  <main>
    <h1 style="color: white; text-align: center;">View Projects</h1>
    <% if (userProjects.length > 0) { %>
    <div class="grid">
      <% for (let project of userProjects) { %>
      <article class="card product-item">
        <header class="card__header">
          <!-- <h1>Project Card</h1> -->
          <!-- <h1>Title:</h1> -->
          <h1 class="product__title"><%= project.title %></h1>
        </header>
        <div class="card__image">
          <img
            src="data:image/png;base64,<%= project.avatar %>"
            alt="<%= project.title %>"
          />
        </div>

        <div class="card__content">
          <!-- <h2>Description: </h2> -->
          <h2 class="creators__pageName">
            Target Amount: <%= project.target_amount %> Raised Amount: <%=
            project.current_amount %>
          </h2>
          <p class="product__description"><%= project.description %></p>
          <div class="centered card__actions">
            <!-- <button class="btn">View</button> -->
            <button class="btn">
              <a
                href="/editProject/<%= project._id %>"
                style="color: inherit; text-decoration: none"
                >Edit</a
              >
            </button>
            <button class="btn">
              <a
                href="/deleteProject/<%= project._id %>"
                style="color: inherit; text-decoration: none"
                >Delete</a
              >
            </button>
          </div>
        </div>
      </article>
      <% } %>
    </div>
    <% } else { %>
    <h1 style="color: white; margin-top: 25px; margin-left: 40px; ">No Projects Found!</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>
</body>
