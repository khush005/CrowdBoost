<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/auth.css" />
<link rel="stylesheet" href="/css/forms.css" />
<body>
  <%- include('../includes/userNavbar.ejs') %>
  <main>
    <form
    class="login-form"
    action="/updateDonation/<%= donation._id %>"
    method="post"
    >
    <h1>UpdateDonations</h1>
      <div class="form-control">
        <label for="title"><%= donation.project.title %></label>
      </div>
      
      <div class="form-control">
        <label for="amountDonated">Donated Amount</label>
        <input
          type="text"
          name="amountDonated"
          id="amountDonated"
          value="<%= donation.amountDonated %>"
        />
      </div>

      <div class="form-control">
        <label for="amount">Date Donated</label>
        <input
          type="text"
          name="dateDonated"
          id="dateDonated"
          value="<%= donation.dateDonated.toLocaleDateString() %>"
        />
      </div>
      
      <button class="btn" type="submit">Update Donation Amount</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>
</body>
